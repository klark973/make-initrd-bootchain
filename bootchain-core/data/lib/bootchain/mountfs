#!/bin/bash -efu

. bootchain-sh-functions

check_parameter MOUNTFS
param="$(get_parameter MOUNTFS)"
target="$(resolve_target "$param")"

[ -n "$target" ] ||
	fatal "unable to resolve: $param"

opts=
[ -c "$target" ] || [ -b "$target" ] ||
	opts='ro,loop'

run mount ${opts:+-o $opts} -- "$target" "$destdir"
