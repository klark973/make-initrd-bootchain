imgargs vmlinuz initrd=initrd.img fastboot root=bootchain bootchain=fg,altboot bc_debug automatic=method:nfs,network:dhcp,server:192.168.15.1,directory:/srv/public/netinst/current ip=dhcp stagename=altinst ramdisk_size=164873 lowmem vga=normal quiet nosplash lang=ru_RU
